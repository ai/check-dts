{
  "name": "check-dts",
  "version": "0.6.2",
  "description": "Unit tests for .d.ts TypeScript definitions",
  "keywords": [
    "typescript",
    "types",
    "test",
    "check"
  ],
  "bin": "./bin.js",
  "type": "module",
  "engines": {
    "node": ">=12.16.0"
  },
  "scripts": {
    "test": "node --experimental-vm-modules node_modules/.bin/jest --coverage && eslint . && yaspeller *.md"
  },
  "peerDependencies": {
    "typescript": ">=4.0.0"
  },
  "dependencies": {
    "fast-glob": "^3.2.7",
    "nanospinner": "^0.4.0",
    "picocolors": "^1.0.0",
    "vfile-location": "^4.0.1"
  },
  "author": "Andrey Sitnik <andrey@sitnik.ru>",
  "license": "MIT",
  "repository": "ai/check-dts",
  "devDependencies": {
    "@logux/eslint-config": "^46.0.1",
    "@logux/sharec-config": "^0.13.0",
    "clean-publish": "^3.4.2",
    "eslint": "^8.1.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-jest": "^25.2.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prefer-let": "^3.0.0",
    "eslint-plugin-promise": "^5.1.1",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-unicorn": "^37.0.1",
    "jest": "^27.3.1",
    "lint-staged": "^11.2.6",
    "prettier": "^2.4.1",
    "print-snapshots": "^0.4.2",
    "simple-git-hooks": "^2.7.0",
    "typescript": "^4.4.4",
    "yaspeller": "^8.0.0"
  },
  "eslintConfig": {
    "extends": "@logux/eslint-config",
    "rules": {
      "node/global-require": "off"
    }
  },
  "jest": {
    "testEnvironment": "node",
    "modulePathIgnorePatterns": [
      "<rootDir>/test/fixtures"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 100
      }
    }
  },
  "lint-staged": {
    "*.md": "yaspeller",
    "*.js": "prettier --write"
  },
  "prettier": {
    "arrowParens": "avoid",
    "jsxSingleQuote": false,
    "quoteProps": "consistent",
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "clean-publish": {
    "cleanDocs": true
  },
  "yaspeller": {
    "lang": "en",
    "ignoreCapitalization": true,
    "ignoreText": [
      " \\(by [^)]+\\)."
    ],
    "dictionary": [
      "Versioning",
      "autocompletion",
      "generics",
      "Storeon",
      "JS",
      "CI",
      "js",
      "ES",
      "CLI"
    ]
  },
  "sharec": {
    "config": "@logux/sharec-config",
    "version": "0.13.0"
  }
}
