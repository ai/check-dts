{
  "name": "check-dts",
  "version": "0.6.4",
  "description": "Unit tests for .d.ts TypeScript definitions",
  "keywords": [
    "typescript",
    "types",
    "test",
    "check"
  ],
  "bin": "./bin.js",
  "type": "module",
  "engines": {
    "node": ">=12.16.0"
  },
  "scripts": {
    "test": "node --experimental-vm-modules node_modules/.bin/jest --coverage && eslint ."
  },
  "peerDependencies": {
    "typescript": ">=4.0.0"
  },
  "dependencies": {
    "fast-glob": "^3.2.7",
    "nanospinner": "^0.5.0",
    "picocolors": "^1.0.0",
    "vfile-location": "^4.0.1"
  },
  "author": "Andrey Sitnik <andrey@sitnik.ru>",
  "license": "MIT",
  "repository": "ai/check-dts",
  "devDependencies": {
    "@logux/eslint-config": "^46.1.0",
    "clean-publish": "^3.4.4",
    "eslint": "^8.4.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prefer-let": "^3.0.1",
    "eslint-plugin-promise": "^5.2.0",
    "jest": "^27.4.3",
    "print-snapshots": "^0.4.2",
    "typescript": "^4.5.2"
  },
  "eslintConfig": {
    "extends": "@logux/eslint-config",
    "rules": {
      "node/global-require": "off"
    },
    "globals": {
      "expect": "readonly",
      "it": "readonly"
    }
  },
  "jest": {
    "testEnvironment": "node",
    "modulePathIgnorePatterns": [
      "<rootDir>/test/fixtures"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 100
      }
    }
  },
  "prettier": {
    "arrowParens": "avoid",
    "jsxSingleQuote": false,
    "quoteProps": "consistent",
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none"
  },
  "clean-publish": {
    "cleanDocs": true
  }
}
